{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    // "moduleResolution": "node",
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "*": ["./src/*"],
      "@screens/*": ["src/screens/*"], // This mapping is relative to "baseUrl"
      "@routes/*": ["src/routes/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@themes/*": ["src/themes/*"]
    }
  }
}
